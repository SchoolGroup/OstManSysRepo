<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OstManSysMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:OstManSysMVVM.ViewModel"
    x:Class="OstManSysMVVM.View.DownPipesApartmentDetails"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.DataContext>
            <ViewModel:ApartmentViewModel/>
        </Grid.DataContext>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

           
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Downpipe ID:" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding  DownpipeApartmentAddress.DownpipeID,Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Condition:" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DownpipeApartmentAddress.Condition}"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="Last Check:" FontWeight="Bold"/>
                                <DatePicker Date="{Binding DownpipeApartmentAddress.LastChecked}"/>
                            </StackPanel>
                      
        </StackPanel>
            </StackPanel>
    </Grid>
</Page>

