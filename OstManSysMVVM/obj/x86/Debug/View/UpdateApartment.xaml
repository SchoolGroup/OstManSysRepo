<Page
    x:Class="OstManSysMVVM.View.UpdateApartment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OstManSysMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel  Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock x:ConnectionId='20'  x:Name="textBlock" TextWrapping="Wrap" Margin="0, 20, 0, 0" Text="Edit the details of the apartment:" FontSize="20" FontWeight="Bold" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel>
                <TextBlock x:ConnectionId='11' x:Name="TextBlock1" Margin="0, 10, 0, 0" TextWrapping="Wrap" Text="Address:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='12' x:Name="TextBlock2" Margin="0, 21, 0, 0" TextWrapping="Wrap" Text="Size:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='13' x:Name="TextBlock3" Margin="0, 20, 0, 0" TextWrapping="Wrap" Text="Number of rooms:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='14' x:Name="TextBlock4" Margin="0, 19, 0, 0" TextWrapping="Wrap" Text="Condition:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='15' x:Name="TextBlock5" Margin="0, 21, 0, 0" TextWrapping="Wrap" Text="Is rented:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='16' x:Name="TextBlock6" Margin="0, 21, 0, 0" TextWrapping="Wrap" Text="Last check:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='17' x:Name="TextBlock7" Margin="0, 21 0, 0" TextWrapping="Wrap" Text="Rent:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='18' x:Name="TextBlock8" Margin="0, 21 0, 0" TextWrapping="Wrap" Text="Owner:" FontSize="15" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='19' x:Name="TextBlock9" Margin="0, 21 0, 0" TextWrapping="Wrap" Text="Images:" FontSize="15" FontWeight="Bold"/>

            </StackPanel>

            <StackPanel>

                <TextBox x:ConnectionId='2' x:Name="textBox" Margin="25, 0, 0, 0"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="15" Width="170"/>
                <TextBox x:ConnectionId='3' x:Name="textBox1" Margin="25, 9, 0, 0"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="15" Width="170"/>
                <TextBox x:ConnectionId='4' x:Name="textBox2" Margin="25, 9, 0, 0"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="15" Width="50"/>
                <TextBox x:ConnectionId='5' x:Name="textBox3" Margin="25, 9, 0, 0"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="15" Width="170"/>
                <CheckBox x:ConnectionId='6' x:Name="checkBox" Content="" Margin="25, 9, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <CalendarDatePicker HorizontalAlignment="Left" Margin="25, 9, 0, 0" VerticalAlignment="Top"/>
                <TextBox x:ConnectionId='7' x:Name="textBox6" Margin="25, 9, 0, 0"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="15" Width="170"/>
                <TextBox x:ConnectionId='8' x:Name="textBox7" Margin="25, 9, 0, 0"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="15" Width="170"/>
                <Button x:ConnectionId='9' x:Name="button2" Background="Transparent" FontSize="12" BorderBrush="Gray" Content="Browse" Margin="25, 15, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Button x:ConnectionId='10' x:Name="button" Background="Transparent" BorderBrush="Black" Content="Update" Margin="0, 15, 0, 0" HorizontalAlignment="Right" VerticalAlignment="Top"/>

            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button x:ConnectionId='1' x:Name="button1" Background="Transparent" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image Source="https://maxcdn.icons8.com/Share/icon/Arrows//left_arrow1600.png" Stretch="UniformToFill">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="PointerPressed">
                            <core:NavigateToPageAction TargetPage="OstManSysMVVM.View.BoardMemberView"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </Image>
            </Button>
        </StackPanel>

    </Grid>
</Page>


