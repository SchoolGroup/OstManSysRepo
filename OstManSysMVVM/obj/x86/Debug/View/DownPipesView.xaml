<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OstManSysMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:OstManSysMVVM.ViewModel"
    x:Class="OstManSysMVVM.View.DownPipesView"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel.DataContext>
                <ViewModel:ApartmentViewModel/>
            </StackPanel.DataContext>
            <StackPanel Margin="16, 100, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ListView x:ConnectionId='1' x:Name="listView" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="850" ItemsSource="{Binding DownpipeApartmentAddressCatalogSingleton.DownpipeApartmentAddresses, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel  Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DownpipeID}" FontWeight="Bold"/>
                                    <TextBlock Text="." FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Margin="10, 0, 0, 0">
                                    <TextBlock Text="{Binding StreetName}"/>
                                </StackPanel>
                                <StackPanel Margin="5, 0, 0, 0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding StreetNumber}"/>
                                    <TextBlock Text=","/>
                                </StackPanel>
                                <StackPanel Margin="5, 0, 0, 0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Floor}"/>
                                    <TextBlock Text="{Binding Side}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="3, 0, 0, 0">
                                    <TextBlock Text="-"/>
                                </StackPanel>
                                <StackPanel Margin="3, 0, 0, 0">
                                    <TextBlock Text="{Binding Condition}" FontStyle="Italic"/>
                                </StackPanel>
                                <StackPanel Margin="10, 0, 0,0">
                                    <TextBlock>
                                        <Run Text="{Binding Path=LastChecked.Day}"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding Path=LastChecked.Month}"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding Path=LastChecked.Year}"/>
                                    </TextBlock>
                                </StackPanel>

                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>

