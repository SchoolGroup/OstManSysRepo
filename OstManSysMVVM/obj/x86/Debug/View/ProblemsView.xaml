<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OstManSysMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:OstManSysMVVM.ViewModel"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="OstManSysMVVM.View.ProblemsView"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.DataContext>
            <ViewModel:ProblemViewModel/>
        </Grid.DataContext>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Margin="16, 100, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <ListView x:ConnectionId='3' x:Name="listView" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="850" ItemsSource="{Binding ProblemCatalogSingleton.Problems, Mode=TwoWay}"  SelectedItem="{Binding ProblemCatalogSingleton.SelectedProblem, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="{Binding ProblemID}" FontWeight="Bold"/><Run Text="." FontWeight="Bold"/>
                                    <Run Text="{Binding ApartmentID}"/>
                                    <Run Text="{Binding Header}" FontStyle="Italic"/>
                                    <Run Text="{Binding Description}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                  </ListView>
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="0, 0, 0, 20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1" Orientation="Vertical">
            <StackPanel Margin="0, 0, 20, 0"  Orientation="Vertical" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:ConnectionId='1' x:Name="button5"  HorizontalContentAlignment="Center" Background="White" FontSize="13" BorderBrush="Black" Width="35" Height="35" HorizontalAlignment="Left" Margin="0, 0, 5, 0" VerticalAlignment="Top">
                        <Image Source="../Assets/add.png" Stretch="Uniform"/>

                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="Click">
                                <core:NavigateToPageAction TargetPage="OstManSysMVVM.View.Report"/>
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </Button>

                    <Button x:ConnectionId='2' x:Name="button7"  HorizontalContentAlignment="Center" Background="White" FontSize="13" BorderBrush="Black" Width="35" Height="35" HorizontalAlignment="Left" Margin="0, 0, 5, 0" VerticalAlignment="Top">
                        <Image Source="../Assets/done.png" Stretch="Uniform">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="PointerPressed">
                                    <core:NavigateToPageAction TargetPage="OstManSysMVVM.View.ProblemSolved"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Image>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        
    </Grid>
</Page>

