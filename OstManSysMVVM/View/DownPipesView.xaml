<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OstManSysMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:OstManSysMVVM.ViewModel"
    x:Class="OstManSysMVVM.View.DownPipesView"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListView x:Name="listView" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="850" ItemsSource="{Binding DownpipeCatalogSingleton.Downpipes, Mode=TwoWay}" SelectedItem="{Binding SelectedApartment, Mode=TwoWay}">
                <ListView.DataContext>
                    <ViewModel:ApartmentViewModel/>
                </ListView.DataContext>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
